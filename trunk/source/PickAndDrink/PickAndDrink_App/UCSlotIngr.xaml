<UserControl x:Class="PickAndDrink.UCSlotIngr"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PickAndDrink"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Text="Ingrédients" Grid.Column="0" Margin="10,5" VerticalAlignment="Center"/>
        <TextBox Text="Quantité" Grid.Column="1" Margin="10,5" VerticalAlignment="Center"/>
        <ComboBox Grid.Column="2" Margin=" 10,5" SelectionChanged="ComboBox_SelectionChanged" SelectedIndex="0" VerticalAlignment="Center">
            <ComboBoxItem>Unité</ComboBoxItem>
            <ComboBoxItem>cl</ComboBoxItem>
            <ComboBoxItem>ml</ComboBoxItem>
            <ComboBoxItem>g</ComboBoxItem>
            <ComboBoxItem>cll à café</ComboBoxItem>
            <ComboBoxItem>cll à soupe</ComboBoxItem>
        </ComboBox>
    </Grid>
</UserControl>
